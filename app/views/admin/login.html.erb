<% @page_title = "login" %>
<html>
<head>
</head>

<body>
<%= form_tag(:action => 'attempt_login') do %>
  <p><%= label_tag("Email ID") %><%= text_field_tag(:email, '') %></p>
  <p><%= label_tag("Password") %><%= password_field_tag(:password, '') %></p>
  <%= submit_tag("Log In") %>
    <% if !flash[:notice].blank? %>
        <div class="flash alert alert-info text-center">
          <%= flash[:notice] %>
        </div>
    <% end %>
<% end %>
</body>

</html>
