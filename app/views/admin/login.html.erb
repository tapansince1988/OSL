<html>
<head></head>
<body>
<style>
  .top-gap{
    padding-top: 60px;
  }
  .shadow {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
  }
  body{
    background: url(https://thumbs.dreamstime.com/t/teal-small-polka-dot-pattern-repeat-background-seamless-repeats-40992377.jpg);
  }
</style><br>
<div class="column small-5 small-centered text-center top-gap spacer">
  <h3>Login</h3>
</div>
<div class="column small-5 small-centered spacer">
  <div class="callout secondary shadow">
    <%= form_tag(:action => 'attempt_login') do %>

        <div class="row middle text-center">
          <div class="small-4 columns">
            <label class="text-right middle"><%= label_tag(:email, "Email ID : ") %></label>
          </div>
          <div class="small-8 columns">
            <label class="text-left middle"><%= text_field_tag(:email, '') %></label>
          </div>
        </div>

        <div class="row middle text-center">
          <div class="small-4 columns">
            <label class="text-right middle"><%= label_tag(:password, "Password : ") %></label>
          </div>
          <div class="small-8 columns">
            <label class="text-left middle"><%= password_field_tag(:password, '') %></label>
          </div>
        </div>
        <div class="column small-5 small-centered text-center spacer">
          <%= submit_tag("Log In") %>
        </div>
        <br>
        <% if !flash[:notice].blank? %>
            <div class="flash alert alert-info text-center">
              <%= flash[:notice] %>
            </div>
        <% end %>
    <% end %>
  </div>
</div>
</body>

</html>
